<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="memoryAccountDAO" class="com.example.solidbankapp.MemoryAccountDAO">
        
    </bean>

    <bean id="accountListingServiceImpl" class="com.example.solidbankapp.AccountListingServiceImpl">
        <constructor-arg ref="memoryAccountDAO"/>
    </bean>
    <bean id="accountCreationServiceImpl" class="com.example.solidbankapp.AccountCreationServiceImpl">
        <constructor-arg ref="memoryAccountDAO"/>
    </bean>
    <bean id="bankCore" class="com.example.solidbankapp.BankCore">
        <constructor-arg ref="accountCreationServiceImpl"/>
    </bean>
    <bean id="myCLI" class="com.example.solidbankapp.MyCLI">

    </bean>
    <bean id="accountBasicCLI" class="com.example.solidbankapp.AccountBasicCLI">
        <constructor-arg ref="myCLI"/>
        <constructor-arg ref="bankCore"/>
        <constructor-arg ref="accountListingServiceImpl"/>
    </bean>
</beans>

